---
import type { HTMLInputTypeAttribute } from "react";

export interface Props extends astroHTML.JSX.InputHTMLAttributes {
  label: string;
}

const { type, label, placeholder, name, required, ...props } = Astro.props;

const id = Math.random().toString(36).substring(2);
---

<div class="flex flex-col">
  <label for={id} class="sr-only">{label}</label>
  <input
    id={id}
    type={type}
    placeholder={placeholder}
    name={name}
    required={required}
    class="w-full border-2 bg-white py-2 placeholder:opacity-40 ring:outline-brand-500 focus:ring-0 focus:outline-none border-neutral-400 focus:border-brand-500 transition-colors selection:bg-neutral-100 rounded-xl"
    {...props}
  />
</div>
