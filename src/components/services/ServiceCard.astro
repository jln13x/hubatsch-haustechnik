---
export interface Props {
  title: string;
  text: string;
}

const { text, title } = Astro.props;
---

<div
  class="border-b-2 border-b-brand-500 p-6 rounded-md transition-colors shadow-[4px_4px_20px_0px_rgba(0,0,0,0.2)] h-full"
>
  <div class="flex justify-center h-20">
    <slot />
  </div>

  <h3 class="text-xl md:text-2xl font-bold mt-12">{title}</h3>
  <p class="mt-4 text-sm md:text-base text-neutral-700">
    {text}
  </p>
</div>
