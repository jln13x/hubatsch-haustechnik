---
import Container from "./Container.astro";
import Logo from "./Logo.astro";
import NavItem from "./NavItem.astro";
---

<header class="bg-black/90 py-6 fixed inset-x-0 z-50 rounded-b-[80px]">
  <Container>
    <div class="flex items-center justify-between">
      <Logo width={160} />
      <nav class="grow flex justify-center text-white">
        <ul class="flex">
          <li>
            <NavItem href="/" title="Start" />
          </li>
        </ul>
      </nav>
    </div>
  </Container>
</header>
